require 'dotenv'
Dotenv.load

default_platform(:ios)

platform :ios do
  lane :deploy do
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_filepath: "fastlane/AuthKey_#{ENV['ASC_KEY_ID']}.p8"
    )

    build_ios_app(
      scheme: "Runner",
      export_method: "app-store"
    )

    upload_to_testflight(
      api_key: api_key
    )
  end
end
